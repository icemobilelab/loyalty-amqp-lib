{
  "name": "@icemobile/loyalty-amqp-lib",
  "version": "1.5.0",
  "description": "Common library for connecting to RabbitMQ",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "lint": "eslint lib test config index.js",
    "integration-test": "nyc mocha --timeout 10000 -r test/util/pretest.js --exit 'test/integration/**/*.test.js' --reporter mochawesome",
    "unit-test": "nyc mocha -r test/util/pretest.js --exit 'test/unit/**/*.test.js'",
    "test-watch": "nyc mocha -r test/util/pretest.js --watch --exit 'test/**/*.test.js'",
    "test": "npm run lint && npm run unit-test && npm run up && npm run integration-test; npm run down",
    "debug": "nodemon --ignore 'test/*' --debug=56745 .",
    "jsdoc": "jsdoc -r lib -R README.md -d doc/jsdoc",
    "sonarqube": "node test/sonarqube/sonarqube",
    "up": "docker-compose up -d && wait-on -l tcp:localhost:5672 http-get://localhost:15672",
    "down": "rm -rf ./coverage && docker-compose down && docker-compose kill && docker-compose rm -fv"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/icemobilelab/loyalty-amqp-lib.git"
  },
  "keywords": [
    "rabbitmq"
  ],
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/icemobilelab/loyalty-amqp-lib/issues"
  },
  "homepage": "https://github.com/icemobilelab/loyalty-amqp-lib#readme",
  "dependencies": {
    "amqplib": "^0.8.0",
    "bluebird-retry": "^0.11.0",
    "bunyan": "^1.8.15",
    "convict": "^6.2.1",
    "convict-format-with-validator": "^6.2.0",
    "locks": "^0.2.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "sonarqube-scanner": "^2.8.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "cli-spinner": "^0.2.10",
    "eslint": "^8.2.0",
    "husky": "^0.14.3",
    "jsdoc": "^3.6.7",
    "loyalty-commons-v4": "git+https://github.com/icemobilelab/loyalty-commons-v4.git#develop",
    "mocha": "^9.1.3",
    "mochawesome": "^7.0.1",
    "nyc": "^15.1.0",
    "rewire": "^5.0.0",
    "sinon": "^12.0.1",
    "wait-on": "^3.3.0"
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "text",
      "text-summary",
      "lcov"
    ]
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
