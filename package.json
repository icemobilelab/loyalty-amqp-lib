{
  "name": "@icemobile/loyalty-amqp-lib",
  "version": "2.1.0",
  "description": "Common library for connecting to RabbitMQ",
  "main": "index.js",
  "scripts": {
    "start": "node .",
    "lint": "eslint lib test config index.js",
    "integration-test": "nyc mocha --timeout 10000 -r test/util/pretest.js --exit 'test/integration/**/*.test.js' --reporter mochawesome",
    "unit-test": "nyc mocha -r test/util/pretest.js --exit 'test/unit/**/*.test.js'",
    "test-watch": "nyc mocha -r test/util/pretest.js --watch --exit 'test/**/*.test.js'",
    "test": "npm run lint && npm run unit-test && npm run up && npm run wait && npm run integration-test; npm run down",
    "debug": "nodemon --ignore 'test/*' --debug=56745 .",
    "jsdoc": "jsdoc -r lib -R README.md -d doc/jsdoc",
    "sonarqube": "node test/sonarqube/sonarqube",
    "up": "npm run down; docker-compose up -d",
    "down": "rm -rf ./coverage; docker-compose down",
    "wait": "wait-on -l tcp:localhost:5672 http-get://localhost:15672",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/icemobilelab/loyalty-amqp-lib.git"
  },
  "keywords": [
    "rabbitmq"
  ],
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/icemobilelab/loyalty-amqp-lib/issues"
  },
  "homepage": "https://github.com/icemobilelab/loyalty-amqp-lib#readme",
  "dependencies": {
    "amqplib": "^0.10.0",
    "convict": "^6.2.4",
    "convict-format-with-validator": "^6.2.0",
    "locks": "^0.2.2",
    "p-retry": "^4.6.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@icemobile/eslint-config-backend": "^1.1.0",
    "chai": "^4.3.4",
    "eslint": "^8.2.0",
    "husky": "^8.0.1",
    "jsdoc": "^3.6.7",
    "loyalty-commons-v4": "github:icemobilelab/loyalty-commons-v4#develop",
    "mocha": "^10.0.0",
    "mochawesome": "^7.0.1",
    "nyc": "^15.1.0",
    "request-promise-native": "^1.0.9",
    "rewire": "^6.0.0",
    "sinon": "^14.0.0",
    "wait-on": "^6.0.1"
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "text",
      "text-summary",
      "lcov"
    ]
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  }
}
